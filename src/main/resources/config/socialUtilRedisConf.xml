<?xml version="1.0" encoding="UTF-8"?>

<beans 
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
        
<context:annotation-config />

<bean id="RedisSessionStore" class="com.rapidbackend.util.comm.redis.client.RedisPoolConfig">
    <property name="port" value="21111"></property>
    <property name="hostAddress" value="192.168.135.138"></property>
    <property name="targetName" value="sessionStore"></property>
    <property name="poolCapacity" value="2"></property>
</bean>

<bean id="RedisUserCahce" class="com.rapidbackend.util.comm.redis.client.RedisPoolConfig">
    <property name="port" value="21112"></property>
    <property name="hostAddress" value="192.168.135.138"></property>
    <property name="targetName" value="userCache"></property>
    <property name="poolCapacity" value="1"></property>
</bean>

<bean id="RedisFeedCahce" class="com.rapidbackend.util.comm.redis.client.RedisPoolConfig">
    <property name="port" value="21112"></property>
    <property name="hostAddress" value="192.168.135.138"></property>
    <property name="targetName" value="feedCache"></property>
    <property name="poolCapacity" value="1"></property>
</bean>

<bean id="UserFeedPostQueueDB" class="com.rapidbackend.util.comm.redis.client.RedisPoolConfig">
    <property name="port" value="21113"></property>
    <property name="hostAddress" value="192.168.135.138"></property>
    <property name="targetName" value="UserFeedPostQueueDB"></property>
    <property name="poolCapacity" value="5"></property>
</bean>

<bean id="GroupFeedPostQueueDB" class="com.rapidbackend.util.comm.redis.client.RedisPoolConfig">
    <property name="port" value="21113"></property>
    <property name="hostAddress" value="192.168.135.138"></property>
    <property name="targetName" value="GroupFeedPostQueueDB"></property>
    <property name="poolCapacity" value="5"></property>
</bean>

<bean id="MetadataCounter" class="com.rapidbackend.util.comm.redis.client.RedisPoolConfig">
    <property name="port" value="21114"></property>
    <property name="hostAddress" value="192.168.135.138"></property>
    <property name="targetName" value="metadataCounter"></property>
    <property name="poolCapacity" value="1"></property>
</bean>

<bean id="UserInboxDB" class="com.rapidbackend.util.comm.redis.client.RedisPoolConfig">
    <property name="port" value="21115"></property>
    <property name="hostAddress" value="192.168.135.138"></property>
    <property name="targetName" value="UserInboxDB"></property>
    <property name="poolCapacity" value="2"></property>
</bean>

<bean id="GroupInboxDB" class="com.rapidbackend.util.comm.redis.client.RedisPoolConfig">
    <property name="port" value="21116"></property>
    <property name="hostAddress" value="192.168.135.138"></property>
    <property name="targetName" value="GroupInboxDB"></property>
    <property name="poolCapacity" value="2"></property>
</bean>


<bean id="RedisInitializer" class="com.rapidbackend.socialutil.core.cache.RedisInitializer">
    <property name="cacheConfigs">
        <list>
            <ref bean="MetadataCounter"/>
        </list>
    </property>
</bean>


<!-- model caches BEGIN-->
<bean id="FeedCache" class="com.rapidbackend.cache.RedisCache">
    <property name="cacheMapper" ref="FeedCacheMapper"></property>
</bean>
<bean id="FeedCacheMapper" class="com.rapidbackend.socialutil.sharding.defaultmappers.FeedCacheMapper">
</bean>

<bean id="UserCache" class="com.rapidbackend.cache.RedisCache">
<property name="cacheMapper" ref="UserCacheMapper"></property>
</bean>
<bean id="UserCacheMapper" class="com.rapidbackend.socialutil.sharding.defaultmappers.UserCacheMapper">
</bean>
<!-- model cache END -->

</beans>