<?xml version="1.0" encoding="UTF-8"?>

<beans 
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:tx="http://www.springframework.org/schema/tx"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
<context:annotation-config />
<bean id="SearchConfiguration" class="com.rapidbackend.socialutil.search.SearchConf">
<property name="solrAdminPort" value="8079"></property>
<property name="solrHome" value="solrhome"></property>
<property name="adminResourceBase" value="src/main/resources/solradmin/web"></property>
<property name="zkRun" value="true"></property>
<property name="zookeeperHost" value="127.0.0.1:9079"></property>
</bean>

<!-- user can modify which property in the model can be indexed into the index, but remember we still
need to config the schema if you change this config. Make sure all the properties added here can be found in solr schema file, 
otherwise index will fail -->
<bean id="FeedIndexConfig" class="com.rapidbackend.socialutil.search.IndexConf">
<property name="propertyToIndex">
  <list>
  <value>id</value>
  <value>content</value>
  <value>created</value>
  </list>
</property>
</bean>
</beans>